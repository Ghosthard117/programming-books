---
export interface Props {
  id: string
  title: string
  img: string
}

const {
  id,
  title,
  img
} = Astro.props
---

<a 
href={`/${id}`}
class="inline-block transition-all hover:scale-105 hover:contrast-125 hover:shadow-2xl">
  <img 
  src={img} 
  alt={`Book cover ${title}`}
  class="aspect-[389/500] h-full object-cover w-full rounded"
  style={`view-transition-name: book-${id}`}
  />
</a>